# Install Dir
PM_DIR = /usr/local/PMlib

AR          = ar cru
RANLIB      = ranlib
RM          = \rm -f
MPI_DIR     = /opt/openmpi
CXX         = icpc
CXXFLAGS    = -O3 -Wall
CXXFLAGS   += -I$(MPI_DIR)/include

all:
	( \
	cd src; \
	make -f Makefile_hand \
		CXX='$(CXX)' \
		CXXFLAGS='$(CXXFLAGS)' \
		AR='$(AR)' \
		RANLIB='$(RANLIB)' \
		RM='$(RM)' \
		PM_DIR='$(PM_DIR)' \
	)

clean:
	( \
	cd src; \
	make -f Makefile_hand clean \
		CXX='$(CXX)' \
		CXXFLAGS='$(CXXFLAGS)' \
		AR='$(AR)' \
		RANLIB='$(RANLIB)' \
		RM='$(RM)' \
		PM_DIR='$(PM_DIR)' \
	)

depend:
	( \
	cd src; \
	make -f Makefile_hand depend \
		CXX='$(CXX)' \
		CXXFLAGS='$(CXXFLAGS)' \
		AR='$(AR)' \
		RANLIB='$(RANLIB)' \
		RM='$(RM)' \
		PM_DIR='$(PM_DIR)' \
	)
